---
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="404 - Page Not Found"
    description="The page you're looking for doesn't exist."
>
    <div
        class="min-h-screen flex items-center justify-center bg-gray-900 text-white px-4"
    >
        <div class="text-center">
            <h1
                class="text-9xl font-bold mb-4 bg-gradient-to-r from-primary-dark to-accent-dark text-transparent bg-clip-text"
            >
                404
            </h1>
            <h2 class="heading-lg mb-6">Page Not Found</h2>
            <p class="body-lg text-gray-300 mb-8 max-w-md mx-auto">
                Oops! Looks like you've ventured into uncharted territory. Let's
                get you back on track.
            </p>
            <a href="/" class="btn btn-primary inline-flex items-center gap-2">
                <span>Return Home</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                >
                    <path
                        fill-rule="evenodd"
                        d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                        clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>

        <!-- Decorative Elements -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div
                class="absolute -top-16 -left-16 w-32 h-32 bg-primary-dark/20 rounded-full blur-xl"
            >
            </div>
            <div
                class="absolute -bottom-16 -right-16 w-32 h-32 bg-accent-dark/20 rounded-full blur-xl"
            >
            </div>
            <div
                class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-r from-primary-dark/10 to-accent-dark/10 rounded-full blur-3xl"
            >
            </div>
        </div>
    </div>
</Layout>

<style>
    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    h1 {
        animation: float 6s ease-in-out infinite;
    }
</style>

